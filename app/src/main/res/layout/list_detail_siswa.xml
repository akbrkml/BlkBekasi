    </LinearLayout>


    <TextView
        android:id="@+id/textnama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_alignTop="@+id/gbr"
        android:layout_toRightOf="@+id/gbr"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="10dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="Nama Siswa Here"

        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Id Siswa"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/textnama"
        android:layout_toEndOf="@+id/gbr"
        android:layout_marginTop="5dp"
        android:textSize="12sp"
        android:id="@+id/textid"
        />

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Id Kelas"
         android:textSize="12sp"
         android:id="@+id/textkelas"
         android:layout_below="@+id/textid"
         android:layout_alignStart="@+id/textid" />

