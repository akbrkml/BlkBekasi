<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".LoginActivity"

    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:src="@android:drawable/ic_menu_send"
        android:layout_centerInParent="true"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="LOGIN PERUSAHAAN"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="5dp"
         />

    <EditText
        android:id="@+id/editTextUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Username"
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:drawableLeft="@drawable/ic_person_black" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:drawableLeft="@drawable/ic_lock_black"/>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="#79cffc"
        android:text="Log In"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:onClick="invokeLogin"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="10dp"
            android:text="Doesn't have account?"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/linksignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onSignUpClick"
            android:textColor="#0848c9"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="Sign Up"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>