<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="20dip"

    >

    
	<LinearLayout android:id="@+id/liniergbr"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:padding="3dip"
        android:layout_alignParentLeft="true"
        android:background="#fffefe"
	    android:layout_marginRight="5dip">



	<!--	<ImageView
			android:id="@+id/gambar"
            android:layout_width="80dp"
            android:layout_height="80dp"
	        android:src="@drawable/no_image"/>
-->

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/stub"
            android:layout_marginStart="5dp"
            android:layout_alignParentStart="true"

            android:id="@+id/gambar"
            android:background="@drawable/symphony"
            />
<!--

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
     -->
	</LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="nama anggota"
        android:id="@+id/textnama"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_alignTop="@+id/liniergbr"
        android:layout_alignStart="@+id/textnoanggota" />

    <TextView
        android:id="@+id/kode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="ini kode"
        android:layout_below="@+id/textnoanggota"
        android:layout_alignStart="@+id/textnoanggota"
        android:textStyle="bold"
        android:visibility="gone"
        />


    <TextView
        android:id="@+id/textnoanggota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="14dp"
        android:textStyle="bold"
        android:hint="Nomor Anggota"
        android:color="#DAE5D6"
android:layout_marginTop="10dp"
        android:layout_below="@+id/textnama"
        android:layout_toEndOf="@+id/liniergbr" />





</RelativeLayout>